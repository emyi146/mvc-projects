@model SportsStore.Web.Models.ProductListViewModel

@{
    ViewBag.Title = "Products";
}
<h1>Products:</h1>

@Html.ActionLink("Sort", "List", new { page = Model.PagingInfo.CurrentPage, category = Model.CurrentCategory, sortField = "ProductId", sortDirection = Model.PagingInfo.SortDirection == SortDirection.Ascending ? SortDirection.Descending : SortDirection.Ascending })

@foreach (var p in Model.Products)
{
    @Html.Partial("ProductSummary", p)
}


<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x, category = Model.CurrentCategory}))
</div>
