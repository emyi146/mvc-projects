@model IEnumerable<SportsStore.Domain.CategoryLookup>

    @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-block btn-default btn-lg" })

    @foreach (var category in Model)
    {
        @Html.RouteLink(
            category.CategoryLookup_Name,
            new
            {
                controller = "Product",
                action = "List",
                categoryName = category.CategoryLookup_Name,
                page = 1
            },
            new { @class = "btn btn-block btn-default btn-lg" + (ViewBag.SelectedCategory == category ? " btn-primary" : "") }
        );
    }
